{
  "name": "gtmc/gtmc-sdk-php",
  "description": "GTMC SDK for PHP. Use in ChargeBacks911 projects",
  "keywords": [
    "php",
    "php7",
    "sdk",
    "library",
    "php-sdk",
    "php-library"
  ],
  "type": "library",
  "homepage": "https://www.chargebacks911.com",
  "time": "2018-10-02",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge P. Hernandez Lalcebo",
      "email": "j.lalcebo@chargebacks911.com",
      "homepage": "https://www.linkedin.com/in/lalcebo",
      "role": "Software Engineer"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-pdo": "*",
    "ext-spl": "*",
    "league/flysystem": "^1.0",
    "league/flysystem-aws-s3-v3": "^1.0",
    "league/flysystem-sftp": "^1.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpunit/php-invoker": "^2.0",
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "Gtmc\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gtmc\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "prefer-stable": true,
  "scripts": {
    "lint": "parallel-lint . --exclude vendor",
    "style": "phpcs -p --standard=PSR2 --encoding=utf-8 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --encoding=utf-8 src tests",
    "phpunit": "phpunit --colors=always --configuration phpunit.xml",
    "test": [
      "parallel-lint . --exclude vendor",
      "phpcs -p --standard=PSR2 --encoding=utf-8 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
      "phpunit --colors=always --configuration phpunit.xml"
    ],
    "post-install-cmd": [
      "cp contrib/pre-commit.sh .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  }
}
